@inherits CustomComponentBase

<div class="options-container">
    @if (_isOptionsListVisible)
    {
        <div class="options-list">
            @foreach (var option in Options)
            {
                <button @onclick="@(async () => await option.OnClickAction.Invoke())" 
                        class="btn btn-secondary options-button"
                        title="@option.ToolTip">
                    <Icon IconName="@option.Icon" />
                    @if (!string.IsNullOrEmpty(option.Text))
                    {
                        @option.Text
                    }
                </button>
            }
        </div>
    }

    <button class="btn btn-primary options-button" 
            @onclick="ToggleOptionsList"
            title="@LabelsTranslator.Options">
        <Icon IconName="@MaterialIconsConstants.List" />
    </button>
</div>