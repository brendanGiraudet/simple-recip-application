@page "/importation"

@inherits FluxorComponent
@rendermode InteractiveServer

<h3>@LabelsLocalizer["ImportIngredients"]</h3>

<EditForm Model="@ImportModel" OnValidSubmit="HandleImport" FormName="import">
    <div class="form-field">
        <label>@LabelsLocalizer["ImportLabel"]</label>
        <InputText @bind-Value="@ImportModel.FilePath" />
    </div>

    <button type="submit" class="btn btn-primary">@LabelsLocalizer["Import"]</button>
</EditForm>

<Loader IsVisible="ImportState.Value.IsLoading" />
